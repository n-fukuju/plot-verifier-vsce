{
	"name": "plot-verifier-vsce",
	"displayName": "プロット検証",
	"description": "プロット通りに物書きができているか検証する。",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:plot.json",
		"plot-verifier-vsce.refresh"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "plot-verifier-vsce.refresh",
				"title": "refresh",
				"icon": {
					"light": "resources/light/reload.svg",
					"dark": "resources/dark/reload.svg"
				}
			},
			{
				"command": "plot-verifier-vsce.edit",
				"title": "edit",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "plot-verifier-vsce.select",
				"title": "select",
				"icon": {
					"light": "resources/light/alert.svg",
					"dark": "resources/dark/alert.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "plot-verifier-vsce.refresh",
					"when": "view == plotVerifier",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "plot-verifier-vsce.edit",
					"when": "view == plotVerifier && viewItem == chapter",
					"group": "inline"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "plotVerifier",
					"name": "プロット検証",
					"when": "plotVerifierEnabled"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"jsonc-parser": "^2.3.1"
	}
}
